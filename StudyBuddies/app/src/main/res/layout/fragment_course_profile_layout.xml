<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id = "@+id/course_profile_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.studybuddies.studybuddies.CourseFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/add_group_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- First Row -->
        <LinearLayout
            android:id="@+id/group_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/group_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group name: " />
            <EditText
                android:id="@+id/group_edit_text"
                android:hint="ex. My Group"
                android:inputType="text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/group_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_group_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Group"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <ListView
            android:id="@+id/group_list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_group_button">
        </ListView>

    </LinearLayout>


</FrameLayout>
