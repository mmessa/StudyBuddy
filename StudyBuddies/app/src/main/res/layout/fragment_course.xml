<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id = "@+id/course_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.studybuddies.studybuddies.CourseFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/add_course_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/add_course_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_course_title_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="5dp"
            android:text="Create a Course"/>

    </LinearLayout>

    <!-- Row -->
    <LinearLayout
        android:id="@+id/course_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/course_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course name: "
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/course_name_edit_text"
            android:inputType="text"
            android:hint="ex. CSCI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Second Row -->
    <LinearLayout
        android:id="@+id/course_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/course_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course number: "
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/course_number_edit_text"
            android:inputType="number"
            android:hint="ex. 567"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"/>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/course_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_course_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Add Course"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/all_courses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/all_courses_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="All Courses"
                android:textStyle="bold"
                android:textSize="15sp"
                android:padding="5dp"/>
        </LinearLayout>

        <ListView
            android:id="@+id/course_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_course_button">
        </ListView>

    </LinearLayout>


</FrameLayout>
