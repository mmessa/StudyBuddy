<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.studybuddies.studybuddies.CourseFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/add_course_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!-- First Row -->
    <LinearLayout
        android:id="@+id/course_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/course_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course name: " />
        <EditText
            android:id="@+id/course_name_edit_text"
            android:inputType="text"
            android:hint="ex. CSCI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Second Row -->
    <LinearLayout
        android:id="@+id/course_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/course_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course number: " />
        <EditText
            android:id="@+id/course_number_edit_text"
            android:inputType="number"
            android:hint="ex. 567"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/course_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_course_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Course"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <ListView
            android:id="@+id/course_list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_course_button">
        </ListView>

    </LinearLayout>


</FrameLayout>
